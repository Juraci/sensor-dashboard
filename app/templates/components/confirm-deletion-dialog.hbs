{{#if showDialog}}
  {{#paper-dialog class='flex-30 flex-sm-offset-0 flex-sm-100 flex-xs-offset-0 flex-xs-100' fullscreen=false clickOutsideToClose=true onClose=(action 'close') origin=dialogOrigin}}
    {{#paper-dialog-content}}
      <h2 class="md-title">{{prompt}}</h2>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button primary=true onClick=(action 'close') }}Cancel{{/paper-button}}
      {{#paper-button id='confirm' warn=true onClick=(action 'confirm') }}Delete{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
